@model IEnumerable<Author>
@{
    ViewData["Title"] = "Authors";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card p-4">
                <div class="card-header pb-0">
                    <h6>Authors</h6>
                    <a asp-controller="Authors" asp-action="Create" class="btn btn-primary">Add New Author</a>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    @if (!Model.Any())
                    {
                        <div class="container w-50 mx-auto">
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16" role="img" aria-label="Warning:">
                                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
                                </svg>
                                <div class="text-white">
                                    There are no authors yet. Start with adding a new author.
                                </div>
                            </div>

                        </div>
                    }
                    else
                    {
                        <table class="table align-items-center mb-0 fs-6">
                            <thead>
                                <tr>
                                    <th class="text-center text-uppercase text-secondary  font-weight-bolder opacity-7">Name</th>
                                    <th class="text-center text-uppercase text-secondary  font-weight-bolder opacity-7">Status</th>
                                    <th class="text-center text-uppercase text-secondary  font-weight-bolder opacity-7">Created on</th>
                                    <th class="text-center text-uppercase text-secondary  font-weight-bolder opacity-7">Updated on</th>
                                    <th class="text-center text-uppercase text-secondary  font-weight-bolder opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var author in Model)
                                {
                                    <tr>
                                        <td class="text-center">
                                            @author.Name
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@((author.IsDeleted) ? "danger" : "success")">
                                                @((author.IsDeleted) ? "Deleted" : "Available")
                                            </span>
                                        </td>

                                        <td class="text-center">
                                            @author.CreatedOn.ToString("MM/dd/yyyy HH:mm")
                                        </td>
                                        <td class="text-center">
                                            @author.LastUpdatedOn?.ToString("MM/dd/yyyy HH:mm")
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="Authors" asp-action="Edit" asp-route-id="@author.Id" class="btn btn-link text-warning mb-0">Edit</a>
                                            @if (!author.IsDeleted)
                                            {
                                                <form asp-controller="Authors" asp-action="Delete" asp-route-id="@author.Id" method="post" class="d-inline delete-form">
                                                    <button type="submit" class="btn btn-link text-danger mb-0">Delete</button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-controller="Authors" asp-action="Retrieve" asp-route-id="@author.Id" method="post" class="d-inline retrieve-form">
                                                    <button type="submit" class="btn btn-link text-success mb-0">Retrieve</button>
                                                </form>
                                            }
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/authors.js"></script>
}