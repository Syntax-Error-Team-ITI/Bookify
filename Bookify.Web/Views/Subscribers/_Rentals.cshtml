@model IEnumerable<RentalViewModel>

@if (!Model.Any())
{
    <div class="alert alert-info bg-light-info border border-info border-2 border-dashed d-flex align-items-center p-4 mb-4">
        <div class="d-flex flex-column">
            <div class="d-flex align-items-center">
                <i class="bi bi-info-circle-fill text-info fs-2 me-3"></i>
                <h5 class="mb-0 text-dark">This subscriber has no rentals yet.</h5>
            </div>
            <p class="mb-0 mt-2 text-muted">When rentals are created, they will appear here.</p>
        </div>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead class="table-light">
                        <tr class="text-muted text-sm text-center">
                            <th class="ps-4 rounded-start">Start Date</th>
                            <th># of Copies</th>
                            <th>Total Delay</th>
                            <th>Added On</th>
                            <th class="pe-4 text-end rounded-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var rental in Model)
                        {
                            <tr class="text-sm text-ce">
                                <td class="ps-4">
                                    <span class="fw-medium">@rental.StartDate.ToString("d MMM, yyyy")</span>
                                </td>
                                <td>
                                    <span class="badge bg-primary text-xl-center rounded-pill">@rental.NumberOfCopies</span>
                                </td>
                                <td class="@(rental.TotalDelayInDays > 0 ? "text-danger fw-bold" : "")">
                                    @rental.TotalDelayInDays
                                </td>
                                <td>
                                    @rental.CreatedOn.ToString("d MMM, yyyy")
                                </td>
                                <td class="text-end pe-4">
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Rentals"
                                       asp-action="Details"
                                       asp-route-id="@rental.Id">
                                        <i class="bi bi-eye-fill me-1"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}