@model BookCopyFormViewModel

@{
    ViewData["Title"] = $"{(Model?.Id > 0 ? "Update" : "Add")}  Copy";
}

<div class="card shadow-sm">
    <div class="card-header">
        <h3 class="card-title">@(Model?.Id > 0 ? "Update" : "Add") Copy</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                @{
                    var formAction = (Model?.Id > 0) ? "Update" : "Create";
                }
                <form method="post" asp-controller="BookCopies" asp-action="@formAction">
                    <input type="hidden" asp-for="BookId" />
                    @if (Model?.Id > 0)
                    {
                        <input type="hidden" asp-for="Id" />
                    }
                    <div class="mb-5">
                        <div class="form-floating mb-2">
                            <input type="text" class="form-control" asp-for="EditionNumber" />
                            <label asp-for="EditionNumber">Edition Number</label>
                        </div>
                        <span asp-validation-for="EditionNumber" class="text-danger"></span>
                    </div>
                    @if (Model!.ShowRentalInput)
                    {
                        <div class="col mb-2">
                            <div class="form-group form-check form-switch my-3">
                                <input class="form-check-input" asp-for="IsAvailableForRental" />
                                <label class="form-check-label" asp-for="IsAvailableForRental"></label>
                            </div>
                            <span asp-validation-for="IsAvailableForRental" class="text-danger"></span>
                        </div>
                    }
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check2"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

