@model BookCopyViewModel

<div class="js-copy-container mb-3">
    <div class="d-flex align-items-center p-3 bg-light rounded-3 shadow-sm">
        <!-- Book Cover Image -->
        <div class="flex-shrink-0 me-3">
            <img src="@Model.BookThumbnailUrl"
                 class="rounded-1 shadow-sm"
                 style="width: 50px; height: 70px; object-fit: cover;"
                 alt="@Model.BookTitle">
        </div>

        <!-- Book Details -->
        <div class="flex-grow-1">
            <input type="hidden" value="@Model.SerialNumber" data-book-id="@Model.BookId" class="js-copy" />
            <h6 class="mb-1 fw-bold">@Model.BookTitle</h6>
            <small class="text-muted">Edition #@Model.EditionNumber</small>
        </div>

        <!-- Remove Button -->
        <button type="button" class="btn btn-outline-danger btn-sm js-remove">
            <i class="bi bi-trash-fill me-1"></i> Remove
        </button>
    </div>
</div>