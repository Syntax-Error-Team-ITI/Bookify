@model RentalFormViewModel

@{
    var title = Model.CurrentCopies.Any() ? "Edit" : "Add";
    ViewData["Title"] = $"{title} Rental";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-12">
            <!-- Main Card -->
            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-white border-bottom">
                    <div class="d-flex justify-content-between align-items-center">
                        <h3 class="mb-0">@title Rental</h3>
                        <span class="badge bg-primary">
                            Max @Model.MaxAllowedCopies book(s)
                        </span>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    <!-- Search Form Section -->
                    <div class="mb-5">
                        <partial name="_SearchForm" model="new SearchFormViewModel()" />
                    </div>

                    <!-- Books List Section -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-bottom">
                            <div class="d-flex justify-content-between align-items-center">
                                <h4 class="mb-0">Selected Books</h4>
                                @* <span class="text-muted small">
                                    @Model.CurrentCopies.Count/@Model.MaxAllowedCopies selected
                                </span> *@
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <form id="CopiesForm" asp-controller="Rentals" asp-action="@(Model.Id.HasValue ? "Edit" : "Create")" method="post">
                                @Html.AntiForgeryToken()
                                <input type="hidden" asp-for="Id" />
                                <input type="hidden" asp-for="SubscriberId" />

                                <!-- Books List -->
                                <div id="booksContainer" class="mb-4">
                                    @if (Model.CurrentCopies.Any())
                                    {
                                        foreach (var copy in Model.CurrentCopies)
                                        {
                                            <partial name="_CopyDetails" model="copy" />
                                        }
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="bi bi-info-circle me-2"></i>
                                            No books selected yet. Use the search above to add books.
                                        </div>
                                    }
                                </div>

                                <!-- Submit Button (hidden by default) -->
                                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                    <button type="submit" class="btn btn-primary px-4 py-2 d-none">
                                        <span class="submit-text">Save Changes</span>
                                        <span class="spinner-border spinner-border-sm d-none ms-2" role="status"></span>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Configuration variables
        const maxAllowedCopies = @Model.MaxAllowedCopies;
        
        // Initialize form
        document.addEventListener('DOMContentLoaded', function() {
            // Form submission handling
            const form = document.getElementById('CopiesForm');
            if (form) {
                form.addEventListener('submit', function(e) {
                    const submitBtn = form.querySelector('button[type="submit"]');
                    if (submitBtn) {
                        submitBtn.disabled = true;
                        submitBtn.querySelector('.submit-text').textContent = 'Processing...';
                        submitBtn.querySelector('.spinner-border').classList.remove('d-none');
                    }
                });
            }
            
            // Additional initialization can go here
        });
    </script>
    <script src="~/js/rental-form.js" asp-append-version="true"></script>
}
